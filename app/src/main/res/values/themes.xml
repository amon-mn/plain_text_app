<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. (Tema Compose, não mexe aqui) -->
    <style name="Theme.PlainTextApp" parent="android:Theme.Material.Light.NoActionBar">
        <!-- ... -->
    </style>

    <!-- Theme para ListActivity e EditActivity (Modo Claro) -->
    <style name="Theme.PlainTextApp.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/appbar_background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Cores para a Toolbar e outros componentes AppCompat no modo claro -->
        <item name="colorPrimary">@color/app_blue</item>
        <item type="color" name="colorSurface">@color/appbar_background_light</item>
        <item type="color" name="colorOnSurface">@color/appbar_text_light</item>
        <!-- REMOVA QUALQUER DEFINIÇÃO DE <color name="..."> AQUI DENTRO -->
    </style>

    <!-- Theme para PreferencesActivity (Modo Claro) -->
    <style name="Theme.PlainTextApp.Preferences" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/appbar_background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Cores para a Toolbar e outros componentes AppCompat no modo claro -->
        <item name="colorPrimary">@color/app_blue</item>
        <item type="color" name="colorSurface">@color/appbar_background_light</item>
        <item type="color" name="colorOnSurface">@color/appbar_text_light</item>
        <!-- REMOVA QUALQUER DEFINIÇÃO DE <color name="..."> AQUI DENTRO -->
    </style>

</resources>